{
  "compilerOptions": {
    // Output
    "outDir": "./dist/",
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    // User-code
    "strict": true,
    "lib": ["DOM", "ESNext"],
    // Dependencies
    "skipLibCheck": true,
    // Source Maps
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true
  }
}
