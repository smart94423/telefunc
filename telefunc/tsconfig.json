{
  "compilerOptions": {
    // Output
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist/esm/",
    // User-code
    "strict": true,
    "lib": ["DOM", "ESNext"],
    // Dependencies
    "skipLibCheck": true,
    // Source Maps
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "stripInternal": true
  },
  "exclude": ["./node_modules/", "./dist/", "**/*.spec.ts"],
  "include": ["./**/*"]
}
